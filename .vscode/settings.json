{
    "saveAndRun": {
        "commands": [
          {
            "match": "\\.c$",
            "cmd": "echo ${file}",
            "useShortcut": false,
            "silent": false
          },
          {
            "match": "\\.txt$",
            "cmd": "echo 'I am a .txt file ${file}.'",
            "useShortcut": false,
            "silent": false
          }
        ]
      }
}